pipeline {
    agent any

    stages {
        stage('Storage Configuration') {
            steps {
                git branch: 'main', url: 'https://github.com/Achrafkhaterchi/OCI_to_AZURE.git'

                sh 'python3 Backend/Remote_State.py'
            }
        }

        stage('Archive TF files') {
            steps {
                archiveArtifacts 'Network/Storage/main.tf'
                /*archiveArtifacts 'Network/VNets/main.tf'*/
            }
        }

        stage('Stash main.tf') {
            steps {
                stash name: 'main_tf_artifact', includes: 'Network/VNets/main.tf'
            }
        }
        stage('Check main.tf existence') {
            steps {
                script {
                    if (fileExists('Network/VNets/main.tf')) {
                        echo 'main.tf exists.'
                    } else {
                        error('main.tf does not exist.')
                    }
                }
            }
        }

        stage('Terraform Init') {
            steps {
                dir('Network/Storage') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('Network/Storage') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('Network/Storage') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }

    post {
        success {
            echo 'Storage module has been successfully processed!'
        }
    }
}
